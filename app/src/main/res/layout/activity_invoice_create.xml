<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/etServiceId"
            android:hint="Service ID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:inputType="text" />

        <EditText
            android:id="@+id/etClientId"
            android:hint="Client User ID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:inputType="text" />

        <EditText
            android:id="@+id/etWorkDone"
            android:hint="Work Done"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minLines="3"
            android:gravity="top|start"
            android:layout_marginTop="12dp"
            android:inputType="textMultiLine" />

        <EditText
            android:id="@+id/etPartsUsed"
            android:hint="Parts Used"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minLines="3"
            android:gravity="top|start"
            android:layout_marginTop="12dp"
            android:inputType="textMultiLine" />

        <EditText
            android:id="@+id/etCost"
            android:hint="Total Cost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:inputType="numberDecimal" />

        <Button
            android:id="@+id/btnSubmitInvoice"
            android:text="Submit Invoice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:padding="12dp" />

    </LinearLayout>
</ScrollView>
